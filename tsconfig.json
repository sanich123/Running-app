{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext",
      "dom.iterable"
    ],
    "allowJs": false,
    "jsx": "react-native",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "noEmitOnError": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@C/*": [
        "components/*"
      ],
      "@const/*": [
        "constants/*"
      ],
      "@R/*": [
        "redux/*"
      ],
      "@U/*": [
        "utils/*"
      ],
      "@A/*": [
        "auth/*"
      ],
      "@T/*": [
        "tests/*"
      ]
    },
    "types": [
      "@testing-library/jest-native",
      "jest"
    ],
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
